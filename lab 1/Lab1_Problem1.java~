public class Lab1_Problem1
{
  public static void main(String[] args)
  {
    // DECLARATIONS
    double dVal1;
    double dVal2;
    // Input-capture variables:
    dVal1=3.6;
    dVal2=4.8;

    // Expression-result variables:
    double dSum;

    // Counter, accumulator, or flag variables:

    // Other variables:

    // Instantiations:

    
    // INITIALIZE VARIABLES
    
    // INPUT
    
    // PROCESSING AND CALCULATIONS
    dSum=dVal1+dVal2;
    
